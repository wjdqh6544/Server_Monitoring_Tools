CC = gcc
CFLAGS = -Wall -Wextra -Werror
LINK = -lpthread

TARGET = 00_Resources_Collector
SRCS = 00_Resources_Collector.c common.c info_to_log.c
OBJS = $(SRCS:.c=.o)

all: $(TARGET)

$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) -o $@ $^ $(LINK)

%.o : %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(OBJS) $(TARGET)
